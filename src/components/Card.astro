---
import { MoveUpRight } from "lucide-solid";
const { tag, title, body, author, publishDate } = Astro.props;
---

<a class="w-full flex items-center gap-8 flex-col h-fit transition card">
  <div class="relative rounded-xl overflow-hidden w-full aspect-[4/3]">
    <div class="absolute inset-0 bg-black backdrop-blur-sm bg-opacity-40 card-effect opacity-0 transition flex items-center justify-center">
      <div class="p-4 rounded-full bg-blue-500 text-white translate-y-5 transition">
        <MoveUpRight class="w-8 h-8 block" />
      </div>
    </div>
    <img src="https://raw.githubusercontent.com/DenverCoder1/minimalistic-wallpaper-collection/refs/heads/main/images/Electronic_Sample_96-calm-night.png" alt="" class="w-full h-full object-cover" />
  </div>
  <div class="flex flex-col gap-4 h-full justify-between">
    <span class="text-blue-500 uppercase font-bold h-[1lh] truncate">{tag}</span>
    <h2 class="text-3xl font-black h-[2lh] overflow-hidden">{title}</h2>
    <p class="font-light text-gray-600 h-[5lh] overflow-hidden">{body}</p>
    <div class="flex items-center gap-4">
      <div class="rounded-full w-16 h-16 overflow-hidden">
        <img src=`https://ui-avatars.com/api/?name=${author}` alt="" class="w-full h-full object-cover">
      </div>
      <div class="flex justify-center flex-col h-full">
        <h3 class="font-bold">{author}</h3>
        <span class="text-gray-500">{publishDate}</span>
      </div>
    </div>
  </div>
</a>

<style>
.card:hover .card-effect {
  opacity: 40;
}

.card:hover .card-effect div {
  transform: translate(0);
}
</style>
